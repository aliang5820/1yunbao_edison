<?xml version="1.0" encoding="utf-8"?>
<!-- 首页 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3E8EC"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="7dp"
        android:layout_weight="2" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <!-- 找货 -->

            <Button
                style="@style/home_test_font"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/driver_shape1"
                android:onClick="onSearchSource"
                android:text="找货" />

            <!-- 找车 -->

            <Button
                style="@style/home_test_font"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/driver_shape5"
                android:onClick="onFindCar"
                android:text="找车" />
        </LinearLayout>
        <!-- 我的好友 -->

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1" >

            <Button
                style="@style/home_test_font"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/driver_shape3"
                android:onClick="onMyFriends"
                android:text="我的好友" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:text="物流公司 车辆管理"
                android:textColor="@drawable/button_font_style" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="7dp"
        android:layout_weight="1" >

        <!-- 发货 -->

        <Button
            android:id="@+id/home_id_publish_goods"
            style="@style/home_test_font"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/shape7"
            android:onClick="onPublishGoods"
            android:text="发货" />
        <!-- 发车 -->

        <Button
            android:id="@+id/home_id_publish_car"
            style="@style/home_test_font"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/driver_shape2"
            android:onClick="onPublishCar"
            android:text="发车" />
    </LinearLayout>
    <!-- 新货源 -->

    <Button
        android:id="@+id/home_id_find_car"
        style="@style/home_test_font"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="7dp"
        android:layout_weight="1"
        android:background="#D069B8"
        android:onClick="onNewSource"
        android:text="新货源" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="7dp"
        android:layout_weight="3"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <!-- 验证保险 -->

            <Button
                style="@style/home_test_font"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="3dp"
                android:layout_weight="2.00"
                android:background="@drawable/shape7"
                android:onClick="onCheckSafe"
                android:text="验证保险" />
            <!-- 互动 -->

            <Button
                style="@style/home_test_font"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@drawable/driver_shape6"
                android:onClick="onInteraction"
                android:text="互动" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <!-- 会员特权 -->

            <Button
                style="@style/home_test_font"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="@drawable/driver_shape5"
                android:onClick="onVIP"
                android:text="会员特权" />
            <!-- 我的推广 -->

            <Button
                style="@style/home_test_font"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_weight="2"
                android:background="@drawable/driver_shape3"
                android:onClick="onSpread"
                android:text="我的推广" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>