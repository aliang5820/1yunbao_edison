<?xml version="1.0" encoding="utf-8"?>
<!-- 司机个人信誉 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/home_sourcedetail_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码：" />

        <TextView
            android:id="@+id/credit_phone"
            style="@style/home_myabc_content_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/home_sourcedetail_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名：" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/home_myabc_content_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/home_sourcedetail_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司名称：" />

        <TextView
            android:id="@+id/tv_company_name"
            style="@style/home_myabc_content_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
       <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/home_sourcedetail_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址：" />

        <TextView
            android:id="@+id/tv_addr"
            style="@style/home_myabc_content_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <TextView
            style="@style/home_sourcedetail_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="座机：" />

        <TextView
            android:id="@+id/tv_telcom"
            style="@style/home_myabc_content_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/home_sourcedetail_title_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_home_driver_credit_evaluate" />

        <RatingBar
            android:id="@+id/credit_score"
            style="@style/home_sourcedetail_ratingbar_style" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <LinearLayout style="@style/home_sourcedetail_layout_style" >

            <TextView
                style="@style/home_sourcedetail_cx_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="履约诚信度" />

            <RatingBar
                android:id="@+id/credit_score1"
                style="@style/home_sourcedetail_ratingbar_style" />
        </LinearLayout>

        <LinearLayout
            style="@style/home_sourcedetail_layout_style"
            android:layout_marginLeft="5dp" >

            <TextView
                style="@style/home_sourcedetail_cx_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="信息真实度" />

            <RatingBar
                android:id="@+id/credit_score2"
                style="@style/home_sourcedetail_ratingbar_style" />
        </LinearLayout>

        <LinearLayout
            style="@style/home_sourcedetail_layout_style"
            android:layout_marginLeft="5dp" >

            <TextView
                style="@style/home_sourcedetail_cx_text_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="付款及时率" />

            <RatingBar
                android:id="@+id/credit_score3"
                style="@style/home_sourcedetail_ratingbar_style" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        style="@style/listViewStyle" />

</LinearLayout>