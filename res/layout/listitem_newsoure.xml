<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:descendantFocusability="blocksDescendants"
              android:gravity="center_vertical"
              android:background="@color/timestampline"
              android:padding="3dp"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/TextColorWhite"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="5dp"
            android:gravity="center_vertical">

        <TextView
                android:id="@id/source_id_order_grab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/ic_button_gray_small"
                android:textColor="#626262"
                android:text="抢单"
                android:textSize="18sp"/>

        <TextView
                android:id="@id/source_id_order_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="@drawable/ic_button_gray_small"
                android:textColor="#626262"
                android:text="报价"
                android:textSize="18sp"/>

        <TextView
                android:id="@+id/tv_djs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/font_gray3"
                android:textSize="14sp"/>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/TextColorWhite"
            android:padding="5dp"
            android:orientation="vertical">

        <TextView
                android:id="@id/source_id_order_info"
                style="@style/home_source_order_info_style"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/TextColorBlack"
                android:textSize="18sp"
                android:layout_weight="1"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@id/source_id_order_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:singleLine="true"/>

            <TextView
                    android:id="@+id/source_id_order_info_detail"
                    style="@style/home_source_order_info_style"
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/source_id_order_money"
                    android:layout_toLeftOf="@id/source_detail_phone"/>

            <Button
                    android:id="@+id/source_detail_phone"
                    style="@style/button_source_detail_phone"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_height="40dp"
                    android:drawableLeft="@drawable/ic_source_detail_phone"
                    android:text="无"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>