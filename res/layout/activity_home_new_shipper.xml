<?xml version="1.0" encoding="utf-8"?>
<!-- 三方首页 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.maogousoft.logisticsmobile.driver.widget.HeaderView android:layout_width="match_parent"
                                                             android:layout_height="wrap_content"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="@dimen/home_ad_height">
        <com.maogousoft.logisticsmobile.driver.widget.OneGallery android:id="@+id/top_ad"
                                                                 android:layout_width="match_parent"
                                                                 android:layout_height="match_parent"
                                                                 android:animationCache="false"
                                                                 android:drawingCacheQuality="high"
                                                                 android:fadingEdge="none"
                                                                 android:fadingEdgeLength="0dp"
                                                                 android:soundEffectsEnabled="false"
                                                                 android:unselectedAlpha="1.1"/>
        <com.maogousoft.logisticsmobile.driver.widget.OneGalleryBottomView
                android:id="@+id/top_ad_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
                  android:layout_weight="5">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="2"
                      android:padding="@dimen/home_drawable_space"
                      android:orientation="horizontal">

            <LinearLayout android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_height="match_parent"
                          android:background="@drawable/driver_shape1"
                          android:onClick="onFindCar"
                          android:gravity="center"
                          android:orientation="vertical">
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginBottom="@dimen/home_drawable_padding"
                           android:src="@drawable/driver_index_4"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          style="@style/home_test_font"
                          android:gravity="center"
                          android:text="车源查找"/>
            </LinearLayout>

            <LinearLayout android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_height="match_parent"
                          android:layout_marginLeft="@dimen/home_drawable_space"
                          android:background="@drawable/driver_shape2"
                          android:onClick="onSearchSource"
                          android:gravity="center"
                          android:orientation="vertical">
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginBottom="@dimen/home_drawable_padding"
                           android:src="@drawable/driver_index_2"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          style="@style/home_test_font"
                          android:gravity="center"
                          android:text="搜索货源"/>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/home_drawable_space"
                        android:layout_marginRight="@dimen/home_drawable_space"
                        android:onClick="onCheckSafe"
                        android:background="@drawable/driver_shape3">

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/driver_img_3"
                       android:src="@drawable/driver_index_8"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/driver_txt_3"
                      style="@style/home_test_font"
                      android:layout_toRightOf="@+id/driver_img_3"
                      android:layout_alignBottom="@+id/driver_img_3"
                      android:text="保险"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      style="@style/home_test_font"
                      android:textSize="@dimen/home_font_small_text_size"
                      android:layout_toRightOf="@+id/driver_txt_3"
                      android:layout_marginLeft="@dimen/home_drawable_space"
                      android:layout_alignBottom="@+id/driver_img_3"
                      android:text="办理"/>
        </RelativeLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_weight="2"
                      android:padding="@dimen/home_drawable_space"
                      android:orientation="horizontal">

            <LinearLayout android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_height="match_parent"
                          android:background="@drawable/driver_shape4"
                          android:onClick="onPublishGoods"
                          android:gravity="center"
                          android:orientation="vertical">
                <ImageView android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginBottom="@dimen/home_drawable_padding"
                           android:src="@drawable/driver_index_7"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          style="@style/home_test_font"
                          android:gravity="center"
                          android:text="发布货源"/>
            </LinearLayout>

            <LinearLayout android:layout_width="0dp"
                          android:layout_weight="1"
                          android:layout_marginLeft="@dimen/home_drawable_space"
                          android:layout_height="match_parent"
                          android:orientation="vertical">

                <LinearLayout android:layout_width="match_parent"
                              android:layout_weight="1"
                              android:layout_height="0dp"
                              android:background="@drawable/driver_shape5"
                              android:gravity="center"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginRight="@dimen/home_drawable_space"
                               android:src="@drawable/driver_index_5"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              style="@style/home_test_font"
                              android:gravity="center"
                              android:text="货单"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_weight="1"
                              android:layout_height="0dp"
                              android:layout_marginTop="@dimen/home_drawable_space"
                              android:background="@drawable/driver_shape6"
                              android:gravity="center"
                              android:onClick="onSettingShipper"
                              android:orientation="horizontal">
                    <ImageView android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginRight="@dimen/home_drawable_space"
                               android:src="@drawable/driver_index_6"/>
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              style="@style/home_test_font"
                              android:gravity="center"
                              android:text="我的"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>