<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.maogousoft.logisticsmobile.driver.widget.HeaderView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/safe_top_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/safeSeaBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/safe_sea_btn"
            android:drawableRight="@drawable/safe_right_icon"
            android:background="@drawable/selector_common_text_view"
            android:paddingBottom="20dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_line_color" />

        <TextView
            android:id="@+id/safePinanBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_common_text_view"
            android:drawableLeft="@drawable/safe_pingan_btn"
            android:drawableRight="@drawable/safe_right_icon"
            android:paddingBottom="20dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/common_line_color" />
    </LinearLayout>
</LinearLayout>