<?xml version="1.0" encoding="utf-8"?>
<!-- 头部相对布局 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/title_bg">

    <TextView
            android:id="@id/titlebar_id_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:gravity="center"
            android:paddingLeft="96.0dip"
            android:paddingRight="96.0dip"
            android:shadowColor="#4c000000"
            android:shadowDx="0.0"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="20.0sp"/>

    <ImageView
            android:id="@id/titlebar_id_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/header_back"/>

    <RelativeLayout android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="45dp"
                  android:id="@id/titlebar_id_tip"
                  android:gravity="center_vertical"
                  android:textSize="16sp"
                  android:textColor="@color/TextColorWhite"
                  android:paddingRight="10dp"
                  android:visibility="gone"
                  android:text="设置线路"/>

        <Button
                android:id="@id/titlebar_id_more"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:visibility="gone"
                android:background="@drawable/header_more"/>
    </RelativeLayout>
</RelativeLayout>