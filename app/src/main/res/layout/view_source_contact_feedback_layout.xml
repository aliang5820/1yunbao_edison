<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/HafTransparent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="30dp"
        android:background="@drawable/phone_feedback_btn">

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/error_type1"
            android:background="@drawable/phone_feedback_btn_selector"
            android:padding="10dp"
            android:gravity="center"
            android:text="信息有误" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/error_type2"
            android:background="@drawable/phone_feedback_btn_selector"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="没有谈好" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/error_type3"
            android:background="@drawable/phone_feedback_btn_selector"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="货已定出" />

        <Button
            style="@style/button1_style"
            android:id="@+id/qiangdan"
            android:layout_marginTop="10dp"
            android:text="我要抢单" />
    </LinearLayout>
</LinearLayout>