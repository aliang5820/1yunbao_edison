<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.maogousoft.logisticsmobile.driver.widget.HeaderView
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--选择合同类型-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_agreement_type"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="平台提示"
                android:padding="5dp"
                android:layout_marginTop="30dp"
                android:textSize="@dimen/font_size_large"
                android:textColor="@color/common_btn_bg" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginTop="20dp"
                android:textSize="@dimen/font_size_normal"
                android:text="@string/agreement_tip" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/pay_password"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:inputType="textPassword"
                android:background="@drawable/select_edit_bg" />

            <Button
                android:id="@+id/next"
                style="@style/info_button_style"
                android:layout_margin="30dp"
                android:onClick="onNext"
                android:text="确认" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>