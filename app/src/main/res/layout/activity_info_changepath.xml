<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.maogousoft.logisticsmobile.driver.widget.HeaderView android:layout_width="match_parent"
                                                             android:layout_height="wrap_content"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_path1"
                style="@style/info_register_text_style"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="线路1"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" >

                <Button
                    android:id="@id/info_id_register_select_province"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_button_gray_small"
                    android:singleLine="true"
                    android:text="@string/string_province"
                    android:textColor="#828384"
                    android:textSize="@dimen/font_size_normal"
                    android:visibility="gone" />

                <Button
                    android:id="@id/info_id_register_select_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ic_button_gray_small"
                    android:singleLine="true"
                    android:text="@string/string_city"
                    android:textColor="#828384"
                    android:textSize="@dimen/font_size_normal"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_jiantou_path1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:background="#00000000"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_register_arrow"
                    android:visibility="gone" />

                <Button
                    android:id="@id/info_id_register_select_end_province"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_button_gray_small"
                    android:singleLine="true"
                    android:text="@string/string_province"
                    android:textColor="#828384"
                    android:textSize="@dimen/font_size_normal"
                    android:visibility="gone" />

                <Button
                    android:id="@id/info_id_register_select_end_city"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_button_gray_small"
                    android:singleLine="true"
                    android:text="@string/string_city"
                    android:textColor="#828384"
                    android:textSize="@dimen/font_size_normal"
                    android:visibility="gone" />
            </LinearLayout>

            <include
                android:id="@id/info_id_register_city"
                layout="@layout/common_city"
                android:visibility="gone" />

            <include
                android:id="@id/info_id_register_endcity"
                layout="@layout/common_city"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_path2"
                style="@style/info_register_text_style"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="线路2"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" >

                <Button
                    android:id="@+id/info_id_register_select_province_second"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_button_gray_small"
                    android:singleLine="true"
                    android:text="@string/string_province"
                    android:textColor="#828384"
                    android:textSize="@dimen/font_size_normal"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/info_id_register_select_city_second"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ic_button_gray_small"
                    android:singleLine="true"
                    android:text="@string/string_city"
                    android:textColor="#828384"
                    android:textSize="@dimen/font_size_normal"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_jiantou_path2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:background="#00000000"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_register_arrow"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/info_id_register_select_end_province_second"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_button_gray_small"
                    android:singleLine="true"
                    android:text="@string/string_province"
                    android:textColor="#828384"
                    android:textSize="@dimen/font_size_normal"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/info_id_register_select_end_city_second"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_button_gray_small"
                    android:singleLine="true"
                    android:text="@string/string_city"
                    android:textColor="#828384"
                    android:textSize="@dimen/font_size_normal"
                    android:visibility="gone" />
            </LinearLayout>

            <include
                android:id="@+id/info_id_register_city_second"
                layout="@layout/common_city"
                android:visibility="gone" />

            <include
                android:id="@+id/info_id_register_endcity_second"
                layout="@layout/common_city"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_path3"
                style="@style/info_register_text_style"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="线路3"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp" >

                <Button
                    android:id="@+id/info_id_register_select_province_third"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_button_gray_small"
                    android:singleLine="true"
                    android:text="@string/string_province"
                    android:textColor="#828384"
                    android:textSize="@dimen/font_size_normal"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/info_id_register_select_city_third"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/ic_button_gray_small"
                    android:singleLine="true"
                    android:text="@string/string_city"
                    android:textColor="#828384"
                    android:textSize="@dimen/font_size_normal"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_jiantou_path3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.5"
                    android:background="#00000000"
                    android:contentDescription="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_register_arrow"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/info_id_register_select_end_province_third"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_button_gray_small"
                    android:singleLine="true"
                    android:text="@string/string_province"
                    android:textColor="#828384"
                    android:textSize="@dimen/font_size_normal"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/info_id_register_select_end_city_third"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_button_gray_small"
                    android:singleLine="true"
                    android:text="@string/string_city"
                    android:textColor="#828384"
                    android:textSize="@dimen/font_size_normal"
                    android:visibility="gone" />
            </LinearLayout>

            <include
                android:id="@+id/info_id_register_city_third"
                layout="@layout/common_city"
                android:visibility="gone" />

            <include
                android:id="@+id/info_id_register_endcity_third"
                layout="@layout/common_city"
                android:visibility="gone" />

            <Button
                android:id="@id/info_id_register_submit"
                style="@style/info_button_style"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="30dp"
                android:text="提交" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>