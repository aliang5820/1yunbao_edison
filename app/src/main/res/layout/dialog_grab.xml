<?xml version="1.0" encoding="utf-8"?>
<!-- 抢单 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dip"
    android:layout_marginRight="8dip"
    android:background="@drawable/abs__dialog_full_holo_light"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="#ff33b5e5"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:minHeight="64dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@android:id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:singleLine="true"
                android:textColor="#ff33b5e5"
                android:textSize="@dimen/font_size_large" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="#ff33b5e5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="10dp" >

        <TextView
            android:id="@android:id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/grabdialog_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保证金："
                android:textColor="#ff33b5e5"
                android:textSize="@dimen/font_size_large"
                android:visibility="gone" />

            <EditText
                android:id="@android:id/text1"
                style="@style/info_edittext_style"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="5dp"
                android:focusable="true"
                android:inputType="number" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <TextView
            android:id="@+id/grabdialog_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="接受货主发价，请直接按确定，也可另报价给货主"
            android:textSize="12sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/grabdialog_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自报价："
                android:textColor="#ff33b5e5"
                android:textSize="@dimen/font_size_large"
                android:visibility="gone" />

            <EditText
                android:id="@android:id/text2"
                style="@style/info_edittext_style"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginTop="5dp"
                android:inputType="number"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@android:id/button1"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="1"
                android:background="@drawable/selector_dialog_leftbutton"
                android:maxLines="2"
                android:minHeight="48dp"
                android:textSize="14sp" />

            <Button
                android:id="@android:id/button3"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@drawable/selector_dialog_rightbutton"
                android:maxLines="2"
                android:minHeight="48dp"
                android:textSize="14sp"
                android:visibility="gone" />

            <Button
                android:id="@android:id/button2"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@drawable/selector_dialog_rightbutton"
                android:maxLines="2"
                android:minHeight="48dp"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>