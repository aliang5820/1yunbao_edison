<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.maogousoft.logisticsmobile.driver.widget.HeaderView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="随车手机:" />

                <EditText
                    android:id="@+id/info_id_register_shuiche_phone"
                    style="@style/info_edittext_style"
                    android:ems="10"
                    android:hint="随车手机"
                    android:inputType="phone" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="司机姓名:" />

                <EditText
                    android:id="@id/info_id_register_name"
                    style="@style/info_edittext_style"
                    android:hint="司机姓名" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="身份证号:" />

                <EditText
                    android:id="@+id/info_id_register_id_card"
                    style="@style/info_edittext_style"
                    android:ems="10"
                    android:hint="请输入身份证号"
                    android:inputType="phone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="车主电话:" />

                <EditText
                    android:id="@+id/info_id_register_chezhu_phone"
                    style="@style/info_edittext_style"
                    android:ems="10"
                    android:hint="车主电话"
                    android:inputType="phone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="车长:" />

                <EditText
                    android:id="@id/info_id_register_length"
                    style="@style/info_edittext_style"
                    android:layout_weight="1"
                    android:digits="1234567890."
                    android:hint="@string/string_tips_length"
                    android:inputType="number" />

                <TextView
                    style="@style/info_register_text_style"
                    android:text="@string/string_register_mi" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="载重:" />

                <EditText
                    android:id="@id/info_id_register_weight"
                    style="@style/info_edittext_style"
                    android:layout_weight="1"
                    android:digits="1234567890."
                    android:hint="@string/string_tips_weight"
                    android:inputType="number" />

                <TextView
                    style="@style/info_register_text_style"
                    android:minWidth="10dp"
                    android:text="@string/string_register_kg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="车型:" />

                <Spinner
                    android:id="@id/info_id_register_type"
                    style="@style/SpinnerStyle"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="车牌号:" />

                <EditText
                    android:id="@id/info_id_register_number"
                    style="@style/info_edittext_style"
                    android:hint="@string/string_tips_number" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="联系人:" />

                <EditText
                    android:id="@+id/optional_linkman"
                    style="@style/info_edittext_style"
                    android:hint="请输入联系人" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="车架编号:" />

                <EditText
                    android:id="@+id/optional_frame_number"
                    style="@style/info_edittext_style"
                    android:hint="请输入车架号" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="开户银行:" />

                <EditText
                    android:id="@+id/optional_bank"
                    style="@style/info_edittext_style"
                    android:hint="请输入开户银行" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="银行账号:" />

                <EditText
                    android:id="@+id/optional_bank_account"
                    style="@style/info_edittext_style"
                    android:inputType="phone"
                    android:hint="请输入银行账号" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="账户姓名:" />

                <EditText
                    android:id="@+id/optional_account_name"
                    style="@style/info_edittext_style"
                    android:hint="请输入账户姓名" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="自我推荐:" />

                <EditText
                    android:id="@+id/myself_recommendation"
                    style="@style/info_edittext_style"
                    android:hint="@string/string_tips_myself_recommendation" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/info_register_text_style"
                    android:layout_width="60dp"
                    android:text="头像照片:" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/id_card_photo"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_img_loading" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/info_register_text_style"
                    android:layout_width="60dp"
                    android:text="车辆照片:" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/car_photo1"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_img_loading" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:id="@+id/car_photo2"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_img_loading" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:id="@+id/car_photo3"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_img_loading" />
            </LinearLayout>

            <Button
                android:id="@id/info_id_register_submit"
                style="@style/info_button_style"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/string_tips_optional_submit" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>