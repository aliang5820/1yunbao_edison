<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.maogousoft.logisticsmobile.driver.widget.HeaderView
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_guid1"
            style="@style/InvoiceTopMenuStyle"
            android:text="待定货单" />

        <TextView
            android:id="@+id/tv_guid2"
            style="@style/InvoiceTopMenuStyle"
            android:text="待装货单" />

        <TextView
            android:id="@+id/tv_guid3"
            style="@style/InvoiceTopMenuStyle"
            android:text="历史货单" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/font_gray3" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:src="@color/common_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@color/font_register"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/menu_bottom_failed"
            style="@style/InvoiceTopMenuStyle"
            android:background="@null"
            android:padding="0dp"
            android:src="@drawable/invoice_failed" />

        <ImageView
            android:id="@+id/menu_bottom_success"
            style="@style/InvoiceTopMenuStyle"
            android:background="@null"
            android:padding="0dp"
            android:src="@drawable/invoice_success" />

        <ImageView
            android:id="@+id/menu_bottom_confirm"
            style="@style/InvoiceTopMenuStyle"
            android:background="@null"
            android:padding="0dp"
            android:src="@drawable/invoice_confirm" />

    </LinearLayout>
</LinearLayout> 